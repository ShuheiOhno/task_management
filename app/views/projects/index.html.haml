- @projects.each do |project|
  = project.title
  %br
    = link_to project_path(project.id) do
      詳細
    = link_to edit_project_path(project.id) do
      編集
    = link_to project_path(project.id), method: :delete do
      削除
  %br
    各コメント
    %br
    - project.project_comments.each do |project_comment|
      = project_comment.title
      %br
      投稿者
      = User.find(project_comment.user_id).name
      %br
  %br


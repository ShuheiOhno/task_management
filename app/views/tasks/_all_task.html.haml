.all_task
  .task_search
    = icon("fas", "search")
    タスクタイトルで検索してください
    = form_with url: search_project_tasks_path(project_id: 1), local: true, method: :get, class:"project_task_form" do |f|
      = f.text_field :keyword, class: "search_input"
      = f.submit "検索", class:"search_btn"
  .all_task_font
    タスク一覧
  - @tasks.each do |task|
    = link_to project_task_path(task_id: task.id, project_id: task.project_id, id: current_user.id), class:"task_wrapper_link" do
      .task_wrapper
        .task_wrapper__title
          タスクタイトル:
          = task.title
        .task_wrapper__charge
          担当:
          = task.user.name
        .task_wrapper__task_comment
          = link_to new_project_task_task_comment_path(task_id: task.id, project_id: task.project_id), class:"link" do
            = icon("far", "comment")
            タスクにコメントする
        .task_wrapper__detail
          .time_btn_wrapper
            - if task.start_time == nil || task.start_time.task_id != task.id
              .task_start_time
                = form_with url: start_times_path(task_id: task.id), method: :post do |f|
                  = f.submit "開始"
            - if task.start_time != nil && task.stop_time == nil
              .task_stop_time
                開始日時:
                = task.start_time.created_at.strftime("%Y年%m月%d日 %H時%M分")
                = form_with url: stop_times_path(task_id: task.id), method: :post do |f|
                  = f.submit "終了"
            -if task.stop_time != nil && task.stop_time != nil
              = task.stop_time.created_at.strftime("%Y年%m月%d日 %H時%M分")
              に完了しました



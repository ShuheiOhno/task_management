.new_task_comment
  .new_task_comment_font
    = icon("fas", "tasks")
    = icon("far", "comment")
    タスクにコメントする
  .new_task_comment_main
    .new_task_comment_wrapper
      = form_with url:  project_task_task_comments_path, method: :post, local: true do |f|
        .new_task_comment_wrapper__title
          タイトル
          %br
          = f.text_field :title, class: "comment_title"
        .new_task_comment_wrapper__comment
          コメント
          %br
          = f.text_area :comment, class: "comment_area"
        .new_task_comment_wrapper__to_user
          宛先
          %br
          = f.select :to_user_id, @users, {include_blank: "---"}
        .new_task_comment_wrapper__submit_btn
          = f.submit "送信",class:"submit_btn"